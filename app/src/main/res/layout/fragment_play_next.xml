<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailScreen.PlayNextFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/play_prev_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/play_prev_btn"
            android:textSize="12sp"
            android:layout_marginVertical="@dimen/MarginS"
            android:layout_marginHorizontal="@dimen/MarginL"
            android:backgroundTint="@color/colorPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/play_next_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/play_next_btn"
            android:textSize="12sp"
            android:layout_marginVertical="@dimen/MarginS"
            android:layout_marginHorizontal="@dimen/MarginL"
            android:backgroundTint="@color/colorPrimary"/>

    </LinearLayout>

</FrameLayout>